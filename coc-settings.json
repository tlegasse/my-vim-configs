{
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",
  "languageserver": {
    "liquid": {
      "command": "theme-check-language-server",
      "filetypes": [
        "liquid"
      ],
      "settings": {
        "themeCheck": {
          "checkOnOpen": true,
          "checkOnChange": true,
          "checkOnSave": true,
        }
      },
      "rootPatterns": [
        ".theme-check.yml"
      ]
    }
  }
}
